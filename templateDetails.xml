<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/2.5/template-install.dtd">

<extension version="3.1" type="template" client="site">
	<name>Blank Template</name>
	<version>1.0</version>
	<creationDate>April 25, 2016</creationDate>
	<author>Chris Cather</author>
	<description>A simple blank template that can quickly and easily adapt to any given design.</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
	</files>
	<positions>
		<position>header</position>
		<position>navigation</position>
		<position>showcase</position>
		<position>above_content</position>
		<position>above_content</position>
		<position>left</position>
		<position>right</position>
		<position>footer</position>
		<position>debug</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="templateColor" class="" type="color" default="#08C"
					label="Template Color"
					description="Choose an overall colour for the site template. If left blank the Default (#0088cc) is used." />

				<field name="templateBackgroundColor" class="" type="color" default="#F4F6F7"
					label="Background Color"
					description="Choose a background colour for static layouts. If left blank the Default (#f4f6f7) is used." />

				<field name="logoFile" class="" type="media" default=""
					label="Logo"
					description="Select or upload a custom logo for the site template." />

				<field name="sitetitle"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					filter="string" />

				<field name="googleFont"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="Google Font for Headings"
					description="Load a Google font for the headings (H1, H2, H3, etc)."
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="googleFontName" class="" type="text" default="Open+Sans"
					label="Google Font Name"
					description="Example: Open+Sans or Source+Sans+Pro." />

			</fieldset>
		</fields>
	</config>
</extension>
